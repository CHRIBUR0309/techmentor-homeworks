<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.restful_todo.mapper.TodoItemMapper">
    <resultMap id="todoItemResultMap" type="TodoItem">
        <id property="todo_id" column="todo_id" />
        <result property="title" column="title" />
        <result property="status" column="status" />
        <result property="details" column="details" />
    </resultMap>
    <select id="getAllItems" resultMap="todoItemResultMap">
        SELECT
            *
        FROM
            todo_items
    </select>
    <select id="getItem" resultMap="todoItemResultMap">
        SELECT
            *
        FROM
            todo_items
        WHERE
            todo_id = #{todoId}
    </select>
    <insert id="insertItemWithoutDetails">
        INSERT INTO
            todo_items (
                , title
                , status
            )
        VALUES
            (
                , #{title}
                , #{status}
            )
    </insert>
    <insert id="insertItemWithDetails">
        INSERT INTO
            todo_items (
                , title
                , status
                , details
            )
        VALUES
            (
                , #{title}
                , #{status}
                , #{details}
            )
    </insert>
    <update id="updateItem">
        UPDATE
            todo_items
        SET
            title = #{title}
            , status = #{status}
            , details = #{details}
        WHERE
            todo_id = #{todoId}
    </update>
    <delete id="deleteItem">
        DELETE FROM
            todo_items
        WHERE
            todo_id = #{todoId}
    </delete>
</mapper>
